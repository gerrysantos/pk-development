<div data-section-id="{{ section.id }}" data-section-type="header-section">
 

  <div class="site-header-wrapper">
    
    <header class="site-header {% if section.settings.minimal_padding == "minimal" %}minimal{% endif %} {% if section.settings.header_full_width %}full-width{% endif %}" data-scroll-lock="{{ section.settings.scroll_lock }}" role="banner">
      <div class="menu-wrap">
        <div ></div>
        <nav class="nav-bar" role="navigation">
          {% include 'site-nav' %}
        </nav>
        <div class="right-menuwrap">
          <div class="nav--icon">
            <button id="search-btn" class="fa fa-search  w3-large" onlick="searching()"></button>
            {% if customer %}
              <img style="opacity: 0" class="login-image" src="https://cdn.shopify.com/s/files/1/2581/7224/files/acc1.png?v=1673847097">
            {% else %}
              <a href="/account/login" id="accntBtn">
                <img class="login-image" src="https://cdn.shopify.com/s/files/1/2581/7224/files/acc1.png?v=1673847097">
              </a>
            {% endif %}

            <a href="/cart" id="CartButton">
              <img class="cart-image" src="https://cdn.shopify.com/s/files/1/2581/7224/files/cart.png?v=1673571248">
              <span id="CartCount">{{ cart.item_count }}</span>
            </a>
          </div>
        </div>
      </div>
    </header>
  </div>
</div>
<nav id="menu" class="panel" role="navigation">
  <div class="search">
       {% include 'search-bar' %}
  </div>
  {% include 'site-nav' %}
  <div class="account">
    {% if shop.customer_accounts_enabled %}
      {% include 'accounts-nav' %}
    {% endif %}
  </div>         
          
</nav>
<script>
  const searchBtn = document.querySelector("#search-btn")

    searchBtn.addEventListner('click', () => {
      alert("Hello");
    })
  
  function searching() {
    alert("searching");
  }

</script>
<style>
  .menu-wrap {
    display: flex;
    justify-content: space-between;
  }
  .right-menuwrap {
    display: flex;
    justify-content: space-between;
  }
  @media screen and (max-width: 700px) {

  .right-menuwrap {
    justify-content: center;
    width: 100%;
    padding: 8px 0;
  }
  }
    @media screen and (max-width: 480px) {

  .right-menuwrap {
    padding: 0 0 8px;
    }
    }
  .login-image,
  .cart-image  {
    width: 24px;
    height: 24px;
  }
  .nav--icon {
    display: flex;
    justify-content: space-between;
    align-items: center;
    width: 150px;
    margin-right: 20px;
  }
  .fa-search {
    border: none;
  }
  
  {% if section.settings.top_bar_full_width %}
  header.util .wrapper {
    padding: 0;
    max-width: 100%;
  }
  header.util .wrapper .left-wrapper,
  header.util .wrapper .right-wrapper {
    margin: 6px 20px;
  }
  {% endif %}
  .site-logo.has-image {
    max-width: {{ section.settings.logo_max_width }}px;
  }
  //

</style>

{% schema %}
{
  "name": "Header",
  "class": "header",
  "settings": [
    {
      "type": "radio",
      "id": "header_layout",
      "label": "Logo placement",
      "options": [
        { "value": "horizontal", "label": "Left aligned" },
        { "value": "vertical", "label": "Centered" }
      ],
      "default": "vertical"
    },
    {
      "type": "image_picker",
      "id": "logo",
      "label": "Logo image"
    },
    {
      "type": "range",
      "id": "logo_max_width",
      "min": 100,
      "max": 1180,
      "step": 20,
      "unit": "px",
      "label": "Logo maximum width",
      "default": 280
    },
    {
      "type": "link_list",
      "id": "main_linklist",
      "label": "Menu",
      "default": "main-menu"
    },
    {
      "type": "select",
      "id": "scroll_lock",
      "label": "Lock while scrolling",
      "options": [
        { "value": "util", "label": "Top bar" },
        { "value": "header", "label": "Header" },
        { "value": "none", "label": "None" }
      ],
      "default": "util"
    },
    {
      "type": "radio",
      "id": "minimal_padding",
      "label": "Header size",
      "options": [
        { "value": "minimal", "label": "Minimal" },
        { "value": "normal", "label": "Normal" }
      ],
      "default": "normal"
    },
    {
      "type": "checkbox",
      "id": "top_bar_full_width",
      "label": "Expand top bar full width",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "header_full_width",
      "label": "Expand header full width",
      "default": false
    }
  ]
}
{% endschema %}
